
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
</head>
<body>
    <h1>Employees</h1>
    <p>Please select an employee from the list:</p>
    @foreach(string nome in ViewBag.EmployeeNames)
    {
        <div>
            @Html.ActionLink(nome, "Details", new { employeeName = nome })
        </div>
    }
</body>
</html>
